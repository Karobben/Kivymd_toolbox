BoxLayout:
    orientation: "vertical"
    show_pic: None
    BoxLayout:
        id: can_box
        test: root.size
        canvas:
            Rectangle:
                texture: root.show_pic
                pos: self.pos
                size: self.size
                #pos_hint: {'center_x': .5, 'center_y': .5}
                #color: 0, 0, 0, 1
    BoxLayout:
        orientation: "vertical"
        BoxLayout
            MDSlider:
                id: slid_font
                min: 0
                max: 500
                value: 0
        MDLabel:
            id: label
            markup: True
            text: "Selecter Video"
        BoxLayout:
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    MDLabel:
                        pos_hint: {'center_x': 0.5, 'center_y': 1}
                        text: "Thresholds:"
                    MDTextField:
                        pos_hint: {'center_x': 0.5, 'center_y': 1}
                        id: thresholds
                        text: "20000"
                        helper_text: "The value for deleting frames"
                        helper_text_mode: "on_focus"

                BoxLayout:
                    orientation: "vertical"
                    MDLabel:
                        markup: True
                        pos_hint: {'center_x': 0.5, 'center_y': 1}
                        text: "Format: [color=#d4d4d4](only one)[/color]"

                    MDBoxLayout:
                        pos_hint: {'center_x': 0.5, 'center_y': 1}
                        orientation: "vertical"
                        MDBoxLayout:
                            MDCheckbox:
                                id: format_mp4
                                active: True
                            MDLabel:
                                text: "mp4"
                        MDBoxLayout
                            MDCheckbox:
                                id: format_avi
                            MDLabel:
                                text: "avi"

                BoxLayout:
                    orientation: "vertical"
                    MDLabel:
                        markup: True
                        text: "Slice [color=#d4d4d4]Seconds, float[/color]"
                    MDBoxLayout:
                        MDBoxLayout:

                            padding: 10, 0, 10, 0
                            MDTextFieldRect:
                                id: sclice_min
                                text: ""
                                hint_text: "from"
                        MDBoxLayout:
                            padding: 10, 0, 10, 0

                            MDTextFieldRect:
                                id: sclice_max
                                text: ""
                                hint_text: "to"

        BoxLayout
            MDRaisedButton:
                id: button_load
                text: 'F'
                font_size: 30
                font_name: './font/heydings-icons-1'
                width: root.width * 0.5
                line_color: 1, 1, 1, 1
            MDRaisedButton:
                id: button_start
                text: 'P'
                font_size: 30
                font_name: './font/heydings-controls-1'
                width: root.width * 0.5
                line_color: 1, 1, 1, 1



<CV_crop_LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: "."

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                id: test
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
