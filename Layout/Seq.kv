MDBoxLayout:
    padding: root.width * .05, root.height * .05,root.width * .05, root.height * .05
    orientation: "vertical"
    slid_font: slid_font

    MDBoxLayout:
        id: boxs
        functions: None#{"aA":"a"}
        label_c: 0, 0, 1, 1

        ScrollView:
            do_scroll_x: True
            do_scroll_y: True

            Label:
                id: seq_result
                markup: True
                size_hint_x: None
                size_hint_y: None
                height: self.texture_size[1]
                width: self.texture_size[0]
                text_size: None, None
                padding: 10, 10
                text: "Result will not show here"
                color: 70/255, 130/255, 180/255, 1
                #font_name: './font/JingDianFanJiaoZhuan-1'
                font_size: root.slid_font.value


    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            padding: 0, 0, self.width * .2, 0
            MDSlider:
                id: slid_font
                min: 0
                max: 100
                value: 40
    MDBoxLayout:
        orientation: "horizontal"
        MDBoxLayout:

            MDRectangleFlatButton:
                id: button_select
                text: "Clustal"
                #font_name: './font/heydings-icons-2'
                #font_size: 40
                pos_hint: {"center_x": .0, "center_y": .5}
                #width: root.width * 0.5
                color: 70/255, 130/255, 180/255, 1

        MDBoxLayout:

            MDTextButton:
                id: button_load
                text: "F"
                font_name: './font/heydings-icons-2'
                width: root.width * 0.5
                pos_hint: {"center_x": .9, "center_y": .5}
                font_size: 40
                color: 70/255, 130/255, 180/255, 1


<LoadDialog_Seq>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser2
            path: "."

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                id: test
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser2.path, filechooser2.selection)
